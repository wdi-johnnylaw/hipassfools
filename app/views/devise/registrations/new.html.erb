<h2>Sign up</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  <% if params[:invitation_code] %>
    <%= f.hidden_field :invitation_code, value: params[:invitation_code] %>
  <% else %>
    <%= f.label :invitation_code, "Invitation code #{content_tag(:span, '(from email sent to you)', class: 'weak')}".html_safe %>
    <%= f.text_field :invitation_code %>
  <% end %>
  <% if params[:redirect] %>
    <%= hidden_field_tag :redirect, params[:redirect] %>
  <% end %>

  <div><%= f.label :email %><br />
  <%= f.email_field :email, :autofocus => true %></div>

  <div><%= f.label :password %><br />
  <%= f.password_field :password %></div>

  <div><%= f.label :password_confirmation %><br />
  <%= f.password_field :password_confirmation %></div>

  <div><%= f.submit "Sign up", class: 'button' %></div>
<% end %>

<%= render "devise/shared/links" %>
