<nav class="top-bar">
  <ul class="title-area">
    <li class="name">
      <h1><%= link_to 'Hip Ass Fools', root_path %></h1>
    </li>
  </ul>

  <section class="top-bar-section">
    <!-- Right Nav Section -->
    <ul class="right">
      <li class="has-form">
        <form action="<%= search_path %>">
          <div class="row collapse">
            <div class="large-8 small-9 columns">
              <input type="text" id="search" name="name" placeholder="Tag">
            </div>
            <div class="large-4 small-3 columns">
              <input type="submit" class="button expand" value="Search" />
            </div>
          </div>
        </form>
      </li>

      <% if user_signed_in? %>
        <li class="padding-right">Logged in as <%= current_user.invite.name %></li>
        <li class="padding-right"><%= link_to 'Sign out', destroy_user_session_path, method: :delete %></li>
      <% elsif !devise_controller? %>
        <li><%= link_to 'Sign in', new_user_session_path(redirect: request.fullpath) %></li>
        <li><%= link_to 'Sign up', new_user_registration_path(redirect: request.fullpath) %></li>
      <% end %>
    </ul>
  </section>
</nav>