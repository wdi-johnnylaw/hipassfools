<h1>Table of Contents</h1>

<ul>
  <% WEEK_TOPICS.each_with_index do |topic, index| %>
    <li class="<%= 'selected' if @week == index %>">
      <span class="week-number"><%= index + 1 %>: </span>
      <span class="topic"><%= link_to topic, root_path(week: index + 1) %> </span>
      <span class="message-count weak">(<%= @message_counts[index].qty %> messages)</span>
    </li>
  <% end %>
</ul>